# OpenResearch Backend Environment Configuration
# Copy this file to .env and update values as needed

# ===========================================
# LLM Provider Configuration
# ===========================================
# OpenRouter API (required)
# Get your key at: https://openrouter.ai/keys
OPENROUTER_API_KEY=sk-or-xxxxxxxxxxxxx
OPENROUTER_MODEL=anthropic/claude-sonnet-4

# ===========================================
# YouWare Labs OAuth (Required for web deployment)
# ===========================================
# Project ID from YouWare Labs
LABS_PROJECT_ID=youresearch-prod

# Environment: "staging" or "production"
# Determines which YouWare Labs server to use
LABS_ENV=staging

# Public URL where this server is accessible
# Used for OAuth callback redirect URI
PUBLIC_BASE_URL=http://localhost:8001

# ===========================================
# Authentication Settings
# ===========================================
# Set to "true" to bypass authentication (for local development)
# IMPORTANT: Set to "false" in production!
DEV_AUTH_BYPASS=true

# Cookie settings
# For same-origin deployment:
#   LABS_COOKIE_SECURE=true
#   LABS_COOKIE_SAMESITE=lax
# For cross-origin deployment (frontend and backend on different domains):
#   LABS_COOKIE_SECURE=true
#   LABS_COOKIE_SAMESITE=none
LABS_COOKIE_SECURE=false
LABS_COOKIE_SAMESITE=lax

# Cookie names (defaults are usually fine)
LABS_TOKEN_COOKIE=labs_token
LABS_STATE_COOKIE=labs_oauth_state
LABS_NEXT_COOKIE=labs_oauth_next

# Public key cache TTL in seconds (default: 24 hours)
LABS_PUBLIC_KEY_TTL=86400

# ===========================================
# CORS Configuration
# ===========================================
# Comma-separated list of allowed origins
# Use "*" for development, specific origins for production
CORS_ALLOW_ORIGINS=http://localhost:3001,http://localhost:8001

# ===========================================
# Server Configuration
# ===========================================
# Host and port (can also be set via command line)
# HOST=127.0.0.1
# PORT=8001
